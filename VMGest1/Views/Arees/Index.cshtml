@model IEnumerable<VMGest1.Models.Aree>

@{
    ViewBag.Title = "Index";
}

<h2>Aree indagine</h2>
<p>
    <a href="@Url.Action("Create", "Arees")" class="btn btn-primary"><span class="badge">@ViewBag.AreeCount</span> Nuovo</a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descrizione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anamnesi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valutazione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trattamento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descrizione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Anamnesi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valutazione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Trattamento)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Area_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Area_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Area_Id })
        </td>
    </tr>
}

</table>
